extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main 
    .container.mb-3 
        .row 
            .col-12 
                +box-head("List Products") 
        
        .row 
            each item in products
                .col-3.mb-3
                    .product-item
                        .inner-image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTkfUUV0cg7xoxErNaGnRdfGvya6fAhlF0Jzw&s", alt="product")
                        .inner-content 
                            h3.inner-title 
                                a(href=`product/${item.slug}`) #{item.title}
                            .inner-price-new #{item.newPrice}$
                            .inner-price-old #{item.price}$
                            .inner-discount #{item.discountPercentage}%
                
            