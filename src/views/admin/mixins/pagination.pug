mixin pagination(pagination)
    nav
      ul.pagination
        li(class=`page-item ${pagination.currentPage == 1 ? 'disabled' : ''}`)
            button.page-link(
                aria-disabled='true'
                button-pagination=pagination.currentPage - 1
                ) Previous
        

        - for(let i = 1;i <= pagination.totalPage;i++)
            if(pagination.currentPage == i)
                li.page-item.active
                    button(
                        class="page-link"
                        button-pagination=i
                    ) #{i}
            else
                li.page-item
                    button(
                        class="page-link"
                        button-pagination=i
                    ) #{i}

        
        li(class=`page-item ${pagination.currentPage == pagination.totalPage ? 'disabled' : ''}`)
            button.page-link(
                button-pagination=pagination.currentPage + 1
            ) Next